{
  "name": "audioroad-webrtc-system",
  "version": "1.0.0",
  "description": "AudioRoad Network WebRTC Radio Show Management System",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "build": "cd client && npm run build",
    "postbuild": "echo 'Client build complete'",
    "dev:full": "concurrently \"npm run server\" \"npm run client\""
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "webrtc",
    "radio",
    "broadcasting",
    "audioroad"
  ],
  "author": "AudioRoad Network",
  "license": "MIT"
}
